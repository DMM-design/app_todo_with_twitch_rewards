    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Server",
            "request": "launch",
            "cwd": "${workspaceFolder}/api",
            "runtimeArgs": [
                "run-script",
                "dev"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        },
        {
            "name": "Launch Client",
            "request": "launch",
            "cwd": "${workspaceFolder}/client",
            "runtimeArgs": [
                "run-script",
                "serve"
            ],
            "runtimeExecutable": "npm",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "type": "pwa-node"
        }
    ]
}